<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Video</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1>Edit Video Details</h1>

    <% if (typeof video !== 'undefined') { %>
        <form action="/update/<%= video.id %>" method="POST">
            <div>
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" value="<%= video.title %>">
            </div>
            <div>
                <label for="description">Description:</label>
                <textarea id="description" name="description"><%= video.description %></textarea>
            </div>
            <button type="submit">Save Changes</button>
        </form>
        <p><small>Filename: <%= video.filename %></small></p>
    <% } else { %>
        <p>Video not found.</p>
    <% } %>

    <a href="/">Back to List</a>

</body>
</html>
